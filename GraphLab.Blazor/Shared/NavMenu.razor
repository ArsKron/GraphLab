<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">GraphLab</a>
    <button class="navbar-toggler" @onclick="NavigationMenuSwitching">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavigationMenuClass" @onclick="NavigationMenuSwitching">

        <ul class="nav flex-column">
            <li class="nav-item px-2">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Обход в глубину/ширину
                </NavLink>
            </li>
        </ul>

        <ul class="nav flex-column">
            <li class="nav-item px-2">
            <NavLink class="nav-link" href="ComponentConnection" Match="NavLinkMatch.All">
                    <span class="oi oi-map" aria-hidden="true"></span>Компоненты связанности
                </NavLink>
            </li>
        </ul>

        <ul class="nav flex-column">
            <li class="nav-item px-2">
                <NavLink class="nav-link" href="MinimalSpanningTrees" Match="NavLinkMatch.All">
                    <span class="oi oi-map" aria-hidden="true"></span>Минимальные <br /> остовные деревья
                </NavLink>
            </li>
        </ul>

        <ul class="nav flex-column">
            <li class="nav-item px-2">
                <NavLink class="nav-link" href="SearchMinimalPath" Match="NavLinkMatch.All">
                    <span class="oi oi-map" aria-hidden="true"></span>Поиск минимального пути
                </NavLink>
            </li>
        </ul>

        <ul class="nav flex-column">
            <li class="nav-item px-2">
                <NavLink class="nav-link" href="AllMinimalPath" Match="NavLinkMatch.All">
                    <span class="oi oi-map" aria-hidden="true"></span>Кратчайшие пути между <br/> всеми парами вершин
                </NavLink>
            </li>
        </ul>

        <ul class="nav flex-column">
            <li class="nav-item px-2">
                <NavLink class="nav-link" href="EulerianCycle" Match="NavLinkMatch.All">
                    <span class="oi oi-map" aria-hidden="true"></span>Эйлеров цикл
                </NavLink>
            </li>
        </ul>
</div>

@code {
    private bool NavigationMenuCrash = true;

    private string NavigationMenuClass => NavigationMenuCrash ? "collapse" : null;

    private void NavigationMenuSwitching()
    {
        NavigationMenuCrash = !NavigationMenuCrash;
    }
}
